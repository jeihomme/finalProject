	</select>
	
	<select id="viewBar" parameterType="web.dto.Bar" resultType="web.dto.Bar">
	
	</select>
	
	<select id="getLocation" parameterType="web.dto.Location" resultType="web.dto.Location">
	
	</select>
	
	<select id="getBarCalendar" parameterType="web.dto.Calendar" resultType="web.dto.Calendar">
	
	</select>
	
	<insert id="barRequest" parameterType="web.dto.Bar">
	
	</insert>
	
	<update id="updateBarInfo" parameterType="web.dto.Bar">
	
